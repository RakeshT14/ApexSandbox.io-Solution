public String reverseWordsInASentence(String sentence){
    //your flawless code here
    List<String> strList = sentence.split(' ');
    String ans = '';
    for(Integer i = strList.size()-1;i>=0;i--){
        if(i!=0){
           ans += strList[i]+' ';
        }else{
            ans += strList[i];
        }
    }
    return ans;
}