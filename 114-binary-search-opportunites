public static Integer search(List<Opportunity> opportunities, Integer target){
    // solution here
    Integer start = 0;
    Integer endIndex = opportunities.size()-1;

    while(start<endIndex){
        Integer middle = start + (endIndex-start)/2;
        if(opportunities.get(middle).Amount<target){
            start = middle+1;
        }else if(opportunities.get(middle).Amount>target){
            endIndex=middle-1;
        }else if(opportunities.get(middle).Amount==target){
            return middle;
        }
    }
    return -1;
}