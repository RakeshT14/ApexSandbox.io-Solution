public static String reverseWords(String str){
    String ansStr = '';
    List<String> strList = str.split(' ');
    for(Integer i=0;i<strList.size();i++){
        if(i==strList.size()-1){
            ansStr += strList[i].reverse();
        }else{
            ansStr += strList[i].reverse() + ' ';
        }
        
    }
    return ansStr;
}